<h2>All Movies</h2>

<%#  Part 1: Start here... %>
<%= form_tag movies_path(@form_tag), method: :get, id: 'ratings_form' do %>
  Include:
  <% @all_ratings.each do |rating| %>
    <div class="form-check  form-check-inline">
      <%= label_tag "ratings[#{rating}]", rating, class: 'form-check-label' %>
      <%= check_box_tag "ratings[#{rating}]", "1",  @ratings_to_show.include?(rating), class: 'form-check-input' %>
    </div>
  <% end %>
  <%= submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary' %>
<% end %>
<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <%= content_tag :th, class: @head_title_hilite do %>
        <%= link_to 'Movie Title', movies_path({:sort_by => "title", :ratings => Hash[@ratings_to_show.collect { |item| [item, 1] } ]}), id: 'title_header' %>
      <% end %>
      <th>Rating</th>
      <%= content_tag :th, class: @head_release_hilite do %>
        <%= link_to 'Release Date', movies_path({:sort_by => "release_date", :ratings => Hash[@ratings_to_show.collect { |item| [item, 1] } ]}), id: 'release_date_header' %>
      <% end %>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
